<?xml version="1.0" encoding="UTF-8"?>
<modification>
    <id>Qf - QUICK|FORM</id>
    <version>17.07.19</version>
    <vqmver required="true">2.6.0</vqmver>
    <author>https://t.me/ulvbern</author>

    <file name="catalog/view/theme/*/template/common/footer.tpl">
	    <operation error="skip" info="Add Qf script">
            <search position="before"><![CDATA[</body>]]></search>
            <add><![CDATA[
              <div class="qf-popup"></div>
              <script><!--
                var qf = {
                  'submit': function(e) {
                    e.preventDefault();
                    var form = $(this);
                    $.ajax({
                      url: form.attr('action'),
                      type: form.attr('method'),
                      dataType: 'html',
                      data: form.serialize(),
                      beforeSend: function() {
                        form.find('.qf-box__btn').attr('disabled', true).css('cursor', 'wait');
                      },
                      success: function(data) {
                        form.parent().parent().html(data);
                      }
                    });
                  },
                  'load': function({block = '.qf-popup', link = '', popup = 0}) {
                    var box=$(block), url='';

                    if(link != 0) url = link;
                    else url = box.attr('data-link');

                    if(url=='') return;

                    box.removeClass('init').empty();

                    $.ajax({
                      url: url+'&popup='+popup,
                      type: 'GET',
                      dataType: 'html',
                      success: function(data) {
                        if(data == '') return;
                        box.html(data);
                        box.addClass('init');
                        if(popup != 0) box.addClass('open');
                      }
                    });
                  },

                  'without': function(e) {
                		el = $(this).find('.qf-popup .qf-box');

                		if (!el.is(e.target) && el.has(e.target).length === 0) qf.close();
                  },

                  'close': function() {
                    $('.qf-popup.open').removeClass('open').empty();
                  }
                };

                $(document).ready(function() {
                  $(document).on('mouseup', qf.without);
                  $(document).on('click', '.qf-box__btn--close', qf.close);
                  $(document).on('submit', 'form.qf-box__form', qf.submit);

                  $('.qf-static').each(function(i, el) {
                    qf.load({block:el});
                  });

                  $(document)on('click', '.qf-load-btn', function() {
                    qf.load({link:$(this).attr('data-link'), popup:1});
                  });
                });
              --></script>
              <!--simple popup styles-->
              <style>
                .qf-popup{
                  position: fixed;
                  z-index: 1000;
                  top: 0;
                  left: 0;
                  right: 0;
                  bottom: 1px; 
                  margin-bottom:-2px; 
                  padding-bottom:1px;
                  overflow: hidden;
                  padding:0 15px;
                  pointer-events: none;
                  visibility: hidden;
                  text-align: center;
                  white-space: nowrap;
                  background-color: rgba(0,0,0,0.3);
                }
                .qf-popup:after{
                  display:inline-block;
                  content: "";
                  vertical-align: middle;
                  width: 0;
                  height: 100%;
                }
                .qf-popup.open{
                  pointer-events: auto;
                  overflow-y: scroll;
                  visibility: visible;
                  display: flex;
                  align-items: center;
                }
                .qf-popup.open.init{
                  display: block;
                  align-items: unset;
                }
                .qf-popup.open.init > .qf-box{
                  display:inline-block;
                  text-align:left;
                }
                .qf-popup > .qf-box{
                  position: relative;
                  z-index: 10;
                  display: none;
                  vertical-align: middle;
                  max-width: 320px;
                  margin:0 auto;
                  background-color: #fff;
                  padding: 15px 25px;
                  border-radius: 4px;
                }
              </style>
            ]]></add>
        </operation>
    </file>

</modification>
